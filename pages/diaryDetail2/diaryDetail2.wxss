page{
  background: #000;
}

swiper{
  height: 92vh;
}

.stop{
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  left: 50%;
  top: 46vh;
  margin-left: -80rpx;
  margin-top: -80rpx;
  z-index: 1;
}

.video {
  width: 100%;
  height: 92vh;
  background: #000;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

video {
  width: 100%;
}

.about {
  position: fixed;
  bottom: 10vh;
  left: 0;
  width: 80%;
  color: #fff;
  padding-left: 3%;
}

.name {
  font-weight: bold;
}

.name>span {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.title {
  margin: 10rpx 0;
  font-size: 28rpx;
}

.content {
  font-size: 28rpx;
}

.op {
  position: fixed;
  right: 3%;
  bottom: 30rpx;
  display: flex;
  flex-direction: column;
  color: #fff;
  font-size: 22rpx;
}

.header {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
}

.op>view {
  margin-top: 30rpx;
  text-align: center;
}

.op>view>image {
  width: 60rpx;
  height: 60rpx;
}

.chat {
  width: 100%;
  padding: 0 5%;
  box-sizing: border-box;
  height: 8vh;
  background: #000;
}

.chat>view {
  width: 80%;
  height: 80%;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 4vh;
  background: #1e1e1e;
}

.chat image {
  width: 46rpx;
  height: 46rpx;
  margin-right: 10rpx;
}

.chat input {
  flex: 1;
  font-size: 28rpx;
  color: #fff;
}