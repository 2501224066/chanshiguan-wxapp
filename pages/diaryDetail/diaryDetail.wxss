.container {
  background: #fff;
}

.top {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 3%;
  box-sizing: border-box;
}

.header {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

.name {
  flex: 1;
  font-weight: bold;
  margin-left: 10rpx;
}

.follow {
  width: 90rpx;
  height: 60.6rpx;
}

.img-box {
  position: relative;
}

.img-num {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  background: rgba(0, 0, 0, .7);
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  padding: 0 15rpx;
  font-size: 20rpx;
  z-index: 1;
}

swiper image {
  width: 100%;
  height: 100%;
}

.img-box-2 {
  height: 100rpx;
  overflow: hidden;
  padding: 8rpx 0;
}

.img-box-2>image {
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin: 0 4rpx;
  box-sizing: border-box;
}

.img-box-2>image:first-child {
  margin-left: 0;
}

.img-box-2>image:last-child {
  margin-right: 0;
}

.avtive {
  border: 4rpx solid #f66e6e;
}

.body {
  padding: 0 3% 20rpx 3%;
}

.num {
  margin: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

.title {
  font-weight: bold;
  margin-bottom: 20rpx;
}

.content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.comment {
  margin-top: 4rpx;
  padding: 30rpx 3%;
  background: #fff;
}

.comment-num {
  font-size: 28rpx;
  font-weight: bold;
}

.comment-header {
  padding-top: 30rpx;
  margin-right: 3%;
}

.comment-header>image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}

.comment-body {
  display: flex;
}

.comment-c {
  flex: 1;
  font-size: 26rpx;
  margin-top: 30rpx;
}

.comment-c>view {
  margin-bottom: 6rpx;
}

.comment-c>view:nth-child(1) {
  color: #999;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.comment-c>view:nth-child(1) image {
  width: 30rpx;
  height: 30rpx;
}

.comment-c>view:nth-child(3) {
  color: #999;
  font-size: 22rpx;
}

.comment-c .comment-c {
  margin-top: 10rpx;
}

.comment-header2 {
  padding-top: 10rpx;
  margin-right: 3%;
}

.comment-header2>image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}

.share {
  margin-top: 4rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
}

.share>view {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  color: #999;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share image {
  width: 46rpx;
  height: 46rpx;
  margin-right: 10rpx;
}